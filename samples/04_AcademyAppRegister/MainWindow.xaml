<Window x:Class="AcademyApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AcademyApp"
        mc:Ignorable="d"
        Title="Приложение Академия WorldSkills" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="TextBlock" x:Key="Title">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="13pt"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="15"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100*" />
            <RowDefinition Height="350*" />
        </Grid.RowDefinitions>

        <!-- Шапка проекта -->
        <StackPanel Background="White"></StackPanel>
        <StackPanel Orientation="Horizontal"
                HorizontalAlignment="Center">

            <Image Source="/Resources/world_skills_logo.png" />

            <TextBlock Style="{StaticResource Title}" Text="{Binding ElementName=FrmMain, Path=Content.Title}" />
        </StackPanel>

        <!-- Тело проекта -->
        <StackPanel Background="White" Margin="50"
                Grid.Row="1" >

            <Frame Name="FrmMain" NavigationUIVisibility="Hidden" />
        </StackPanel>
    </Grid>
</Window>
