<Page x:Class="AcademyApp.Pages.CreateAcc"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:AcademyApp.Pages"
      mc:Ignorable="d"
      d:DesignHeight="350" d:DesignWidth="800"
      Title="Окно Регистрации">
    <Page.Resources>
        <Style TargetType="TextBlock" x:Key="Label">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0 5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Width" Value="150"/>
        </Style>
        <Style TargetType="TextBox" x:Key="InputTxt">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0 5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Width" Value="150"/>
        </Style>
        <Style TargetType="PasswordBox" x:Key="InputPass">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0 5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Width" Value="150"/>
        </Style>
        <Style TargetType="Button" x:Key="Btn">
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="MinHeight" Value="40"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Width" Value="150"/>
            <Setter Property="Margin" Value="0 5 0 0"/>
        </Style>
    </Page.Resources>

    <Grid>
        <StackPanel MaxWidth="320" Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <TextBlock Style="{StaticResource Label}">Введите Имя:</TextBlock>
                <Separator Opacity="0" Height="20" Width="10"/>
                <TextBox x:Name="txbName" Style="{StaticResource InputTxt}" HorizontalAlignment="Stretch"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Style="{StaticResource Label}">Введите Логин:</TextBlock>
                <Separator Opacity="0" Height="20" Width="10"/>
                <TextBox Style="{StaticResource InputTxt}" x:Name="txbLogin"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Style="{StaticResource Label}">Введите Пароль:</TextBlock>
                <Separator Opacity="0" Height="20" Width="10"/>
                <TextBox x:Name="txbPass" Style="{StaticResource InputTxt}"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Style="{StaticResource Label}">Подтвердите Пароль:</TextBlock>
                <Separator Opacity="0" Height="20" Width="10"/>
                <PasswordBox x:Name="psbPass" Style="{StaticResource InputPass}" PasswordChanged="psbPass_PasswordChanged"></PasswordBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button x:Name="btnCreate" Style="{StaticResource Btn}" BorderBrush="#1e7041" Background="#88e28b"
                        IsDefault="True" IsEnabled="False" MouseEnter="createAccBtn_MouseEnter" Content="Создать" Click="btnCreate_Click" />
                <Separator Opacity="0" Height="20" Width="10"/>
                <Button x:Name="goBackBtn" Style="{StaticResource Btn}" BorderBrush="#3659b3" Background="#004ef4" Foreground="White"
                        Click="goBackBtn_Click" MouseEnter="goBackBtn_MouseEnter">Назад</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
