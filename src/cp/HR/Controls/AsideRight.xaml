             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Res/AsideMenuStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <utils:PageToIsCheckedConverter x:Key="CheckedConverter" />
