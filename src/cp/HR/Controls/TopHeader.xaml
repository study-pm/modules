<local:NavCtl x:Class="HR.Controls.TopHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:HR.Controls"
             xmlns:utils="clr-namespace:HR.Utilities"
             mc:Ignorable="d"
             d:DesignHeight="100" d:DesignWidth="1080">
    <local:NavCtl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Res/TopMenuStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <utils:PageToIsCheckedConverter x:Key="CheckedConverter" />
            <utils:PageToIsEnabledConverter x:Key="EnabledConverter" />
            <BooleanToVisibilityConverter x:Key="BoolToVis" />
            <utils:InverseBoolToVisibilityConverter x:Key="InverseBoolToVis" />
        </ResourceDictionary>
    </local:NavCtl.Resources>
    <Border CornerRadius="5">
        <Border.Effect>
            <DropShadowEffect Color="#264d7f7f" Direction="270" ShadowDepth="5" BlurRadius="10" Opacity="0.25"/>
        </Border.Effect>
        <DockPanel Style="{StaticResource HeaderStyle}">
            <local:IconHighlightButton Width="50" Height="50" Margin="30,20" Click="HomeItem_Click" ToolTip="На главную">
                <StackPanel>
                    <Viewbox Stretch="Fill" Width="50" Height="50">
                        <Path Fill="{StaticResource magentaNormalBrush}"
                            Data="M320 32c-8.1 0-16.1 1.4-23.7 4.1L15.8 137.4C6.3 140.9 0 149.9 0 160s6.3 19.1 15.8 22.6l57.9 20.9C57.3 229.3 48 259.8 48 291.9l0 28.1c0 28.4-10.8 57.7-22.3 80.8c-6.5 13-13.9 25.8-22.5 37.6C0 442.7-.9 448.3 .9 453.4s6 8.9 11.2 10.2l64 16c4.2 1.1 8.7 .3 12.4-2s6.3-6.1 7.1-10.4c8.6-42.8 4.3-81.2-2.1-108.7C90.3 344.3 86 329.8 80 316.5l0-24.6c0-30.2 10.2-58.7 27.9-81.5c12.9-15.5 29.6-28 49.2-35.7l157-61.7c8.2-3.2 17.5 .8 20.7 9s-.8 17.5-9 20.7l-157 61.7c-12.4 4.9-23.3 12.4-32.2 21.6l159.6 57.6c7.6 2.7 15.6 4.1 23.7 4.1s16.1-1.4 23.7-4.1L624.2 182.6c9.5-3.4 15.8-12.5 15.8-22.6s-6.3-19.1-15.8-22.6L343.7 36.1C336.1 33.4 328.1 32 320 32zM128 408c0 35.3 86 72 192 72s192-36.7 192-72L496.7 262.6 354.5 314c-11.1 4-22.8 6-34.5 6s-23.5-2-34.5-6L143.3 262.6 128 408z"/>
                    </Viewbox>
                </StackPanel>
            </local:IconHighlightButton>

            <local:LeftMenu x:Name="LeftMenu" VerticalAlignment="Center" />

            <local:IconHighlightButton DockPanel.Dock="Right" Margin="0 20 20 10" Width="75" Height="75"
                                       Click="AuthItem_Click" ToolTip="Войти"
                                       Visibility="{Binding IsAuth, Source={x:Static Application.Current}, Converter={StaticResource InverseBoolToVis}}"
                                       >
                <StackPanel DockPanel.Dock="Right">
                    <Viewbox Stretch="Fill" Width="40" Height="40">
                        <Path Fill="{StaticResource cyanLightBrush}" Data="M248 104c-53 0-96 43-96 96s43 96 96 96 96-43 96-96-43-96-96-96zm0 144c-26.5 0-48-21.5-48-48s21.5-48 48-48 48 21.5 48 48-21.5 48-48 48zm0-240C111 8 0 119 0 256s111 248 248 248 248-111 248-248S385 8 248 8zm0 448c-49.7 0-95.1-18.3-130.1-48.4 14.9-23 40.4-38.6 69.6-39.5 20.8 6.4 40.6 9.6 60.5 9.6s39.7-3.1 60.5-9.6c29.2 1 54.7 16.5 69.6 39.5-35 30.1-80.4 48.4-130.1 48.4zm162.7-84.1c-24.4-31.4-62.1-51.9-105.1-51.9-10.2 0-26 9.6-57.6 9.6-31.5 0-47.4-9.6-57.6-9.6-42.9 0-80.6 20.5-105.1 51.9C61.9 339.2 48 299.2 48 256c0-110.3 89.7-200 200-200s200 89.7 200 200c0 43.2-13.9 83.2-37.3 115.9z"/>
                    </Viewbox>
                    <TextBlock HorizontalAlignment="Center" Margin="5" Foreground="Beige" FontSize="12" TextTrimming="CharacterEllipsis">
                        Гость
                    </TextBlock>
                </StackPanel>
            </local:IconHighlightButton>
            <local:IconHighlightButton DockPanel.Dock="Right" Margin="0 20 20 10" Width="75" Height="75"
                                       Click="PreferencesItem_Click" ToolTip="Настройки"
                                       Visibility="{Binding IsAuth, Source={x:Static Application.Current}, Converter={StaticResource BoolToVis}}"
                                       >
                <StackPanel DockPanel.Dock="Right">
                    <Viewbox Stretch="Fill" Width="40" Height="40">
                        <Path Fill="{StaticResource cyanDarkBrush}" Data="M248 8C111 8 0 119 0 256s111 248 248 248 248-111 248-248S385 8 248 8zm0 96c48.6 0 88 39.4 88 88s-39.4 88-88 88-88-39.4-88-88 39.4-88 88-88zm0 344c-58.7 0-111.3-26.6-146.5-68.2 18.8-35.4 55.6-59.8 98.5-59.8 2.4 0 4.8 .4 7.1 1.1 13 4.2 26.6 6.9 40.9 6.9 14.3 0 28-2.7 40.9-6.9 2.3-.7 4.7-1.1 7.1-1.1 42.9 0 79.7 24.4 98.5 59.8C359.3 421.4 306.7 448 248 448z"/>
                    </Viewbox>
                    <TextBlock HorizontalAlignment="Center" Margin="5" Foreground="Beige" FontSize="12" TextTrimming="CharacterEllipsis"
                               Text="{Binding CurrentUser.Login, Source={x:Static Application.Current}}"
                               />
                </StackPanel>
            </local:IconHighlightButton>
            <WrapPanel x:Name="TopMenu" VerticalAlignment="Center">
                <Menu Margin="30 20">
                    <MenuItem Header="_Главная"
                              IsEnabled="{Binding CurrentPage, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource EnabledConverter}, ConverterParameter=HomePg}"
                              Command="NavigationCommands.GoToPage"
                              CommandParameter="Pages/HomePg.xaml"
                              CommandTarget="{Binding ElementName=mainFrame}"
                              />
                    <MenuItem Header="_Сотрудники"
                              IsChecked="{Binding CurrentPage, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource CheckedConverter}, ConverterParameter='WorkersPg'}"
                              Command="NavigationCommands.GoToPage"
                              CommandParameter="Pages/WorkersPg.xaml"
                              CommandTarget="{Binding ElementName=mainFrame}"
                              >
                        <MenuItem Header="_Руководство" Style="{StaticResource SubMenuItemStyle}" />
                        <MenuItem Header="_Учителя" Style="{StaticResource SubMenuItemStyle}" />
                        <MenuItem Header="П_едагоги" Style="{StaticResource SubMenuItemStyle}" />
                        <MenuItem Header="Вспо_могательный персонал" Style="{StaticResource SubMenuItemStyle}" />
                    </MenuItem>
                    <MenuItem Header="_Подразделения">
                        <MenuItem Header="_Администрация" Style="{StaticResource SubMenuItemStyle}" />
                        <MenuItem Header="МО _начальных классов" Style="{StaticResource SubMenuItemStyle}" />
                        <MenuItem Header="МО _математики и информатики" Style="{StaticResource SubMenuItemStyle}" />
                        <MenuItem Header="МО _филологического образования" Style="{StaticResource SubMenuItemStyle}" />
                        <MenuItem Header="МО _иностранного языка" Style="{StaticResource SubMenuItemStyle}" />
                        <MenuItem Header="МО _естественнонаучного цикла" Style="{StaticResource SubMenuItemStyle}" />
                        <MenuItem Header="МО _общественных дисциплин" Style="{StaticResource SubMenuItemStyle}" />
                        <MenuItem Header="МО _эстетического цикла" Style="{StaticResource SubMenuItemStyle}" />
                        <MenuItem Header="МО физической _культуры" Style="{StaticResource SubMenuItemStyle}" />
                        <MenuItem Header="_Педагоги-организаторы" Style="{StaticResource SubMenuItemStyle}" />
                        <MenuItem Header="Педагоги _дополнительного образования" Style="{StaticResource SubMenuItemStyle}" />
                        <MenuItem Header="_Служба сопровождения" Style="{StaticResource SubMenuItemStyle}" />
                        <MenuItem Header="_Воспитатели группы продленного дня" Style="{StaticResource SubMenuItemStyle}" />
                        <MenuItem Header="Медиа_тека" Style="{StaticResource SubMenuItemStyle}" />
                    </MenuItem>
                    <MenuItem Header="_Учебная работа">
                        <MenuItem Header="_Предметы" Style="{StaticResource SubMenuItemStyle}" />
                        <MenuItem Header="П_реподаватели" Style="{StaticResource SubMenuItemStyle}" />
                    </MenuItem>
                    <MenuItem Header="_Воспитательная работа">
                        <MenuItem Header="_Классы" Style="{StaticResource SubMenuItemStyle}" />
                        <MenuItem Header="Классные _руководители" Style="{StaticResource SubMenuItemStyle}" />
                    </MenuItem>
                    <MenuItem Header="_Дополнительное образование">
                        <MenuItem Header="_Педагоги ОДОД" Style="{StaticResource SubMenuItemStyle}" />
                        <MenuItem Header="_Кружки и секции" Style="{StaticResource SubMenuItemStyle}" />
                    </MenuItem>
                    <MenuItem Header="П_ользователь"
                              IsChecked="{Binding CurrentPage, RelativeSource={RelativeSource AncestorType=UserControl},
                                Converter={StaticResource CheckedConverter}, ConverterParameter='AuthPg, RegisterPg, PreferencesPg'}"
                              >
                        <MenuItem Header="В_ход"
                                  Style="{StaticResource SubMenuItemStyle}"
                                  Command="NavigationCommands.GoToPage"
                                  CommandParameter="Pages/AuthPg.xaml"
                                  CommandTarget="{Binding ElementName=mainFrame}"
                                  IsEnabled="{Binding CurrentPage, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource EnabledConverter}, ConverterParameter=AuthPg}"
                                  Visibility="{Binding IsAuth, Source={x:Static Application.Current}, Converter={StaticResource InverseBoolToVis}}"
                                  />
                        <MenuItem Header="_Регистрация"
                                  Style="{StaticResource SubMenuItemStyle}"
                                  Command="NavigationCommands.GoToPage"
                                  CommandParameter="Pages/RegisterPg.xaml"
                                  CommandTarget="{Binding ElementName=mainFrame}"
                                  IsEnabled="{Binding CurrentPage, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource EnabledConverter}, ConverterParameter=RegisterPg}"
                                  Visibility="{Binding IsAuth, Source={x:Static Application.Current}, Converter={StaticResource InverseBoolToVis}}"
                                  />
                        <MenuItem Header="П_редпочтения"
                                  Style="{StaticResource SubMenuItemStyle}"
                                  Command="NavigationCommands.GoToPage"
                                  CommandParameter="Pages/PreferencesPg.xaml"
                                  CommandTarget="{Binding ElementName=mainFrame}"
                                  IsEnabled="{Binding CurrentPage, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource EnabledConverter}, ConverterParameter=PreferencesPg}"
                                  Visibility="{Binding IsAuth, Source={x:Static Application.Current}, Converter={StaticResource BoolToVis}}"
                                  />
                        <MenuItem Header="Вы_ход"
                                  Style="{StaticResource SubMenuItemStyle}"
                                  Click="LogoutItem_Click"
                                  Visibility="{Binding IsAuth, Source={x:Static Application.Current}, Converter={StaticResource BoolToVis}}"
                                  />
                    </MenuItem>
                </Menu>
            </WrapPanel>
        </DockPanel>
    </Border>
</local:NavCtl>
