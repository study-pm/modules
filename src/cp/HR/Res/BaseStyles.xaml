<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DropShadowEffect x:Key="DropShadowEffect" Color="Black" Direction="270" ShadowDepth="4" BlurRadius="8" Opacity="0.3" />
    <FontFamily x:Key="Roboto">pack://application:,,,/Fonts/#Roboto</FontFamily>
    <SolidColorBrush x:Key="AwaitingBrush" Color="#80e6ec" />
    <SolidColorBrush x:Key="cyanDarkBrush" Color="#009ca2" />
    <SolidColorBrush x:Key="cyanLightBrush" Color="#8bd3d5" />
    <SolidColorBrush x:Key="baseBackgroundBrush" Color="#edf1f7" />
    <SolidColorBrush x:Key="BaseDarkBrush" Color="#33404d" />
    <SolidColorBrush x:Key="BaseLightBrush" Color="#dde0e2" />
    <SolidColorBrush x:Key="BlueBrush" Color="#21a0df" />
    <SolidColorBrush x:Key="CsvBrush" Color="#088409" />
    <SolidColorBrush x:Key="DisabledBackgroundBrush" Color="Gray" />
    <SolidColorBrush x:Key="DisabledForegroundBrush" Color="LightGray" />
    <SolidColorBrush x:Key="DisabledBorderBrush" Color="DarkGray" />
    <SolidColorBrush x:Key="ErrorBrush" Color="#e53935" />
    <SolidColorBrush x:Key="GreenBrush" Color="#50b319" />
    <SolidColorBrush x:Key="GreenDarkBrush" Color="#669d1e" />
    <SolidColorBrush x:Key="GreenLightBrush" Color="#c3dda2" />
    <SolidColorBrush x:Key="GreenMediumBrush" Color="#82b43c" />
    <SolidColorBrush x:Key="magentaDarkBrush" Color="#e53582" />
    <SolidColorBrush x:Key="magentaNormalBrush" Color="#ef91bc" />
    <SolidColorBrush x:Key="magentaLightBrush" Color="#f3c2d9" />
    <SolidColorBrush x:Key="greyDarkBrush" Color="#535353" />
    <SolidColorBrush x:Key="greyLightBrush" Color="#f5f5f5" />
    <SolidColorBrush x:Key="orangeDarkBrush" Color="#f38c2b" />
    <SolidColorBrush x:Key="orangeLightBrush" Color="#f3b26c" />
    <SolidColorBrush x:Key="OrangeRegularBrush" Color="#df7020" />
    <SolidColorBrush x:Key="PdfBrush" Color="#da4953" />
    <SolidColorBrush x:Key="SuccessBrush" Color="#50b319" />
    <SolidColorBrush x:Key="transparentBrush" Opacity="0.5" />
    <SolidColorBrush x:Key="WarningBrush" Color="#f4b02a" />
    <SolidColorBrush x:Key="WhiteDarkBrush" Color="#f5f5f5" />
    <Style x:Key="WindowStyle" TargetType="Window">
        <Setter Property="Background" Value="{StaticResource baseBackgroundBrush}" />
        <Setter Property="FontFamily" Value="{StaticResource Roboto}" />
        <Setter Property="Foreground" Value="{StaticResource greyDarkBrush}" />
    </Style>
    <Style x:Key="HeaderStyle" TargetType="Panel">
        <Setter Property="Control.FontFamily" Value="{StaticResource Roboto}" />
        <Setter Property="Control.FontWeight" Value="Normal" />
        <Setter Property="Control.FontSize" Value="13" />
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <LinearGradientBrush.GradientStops>
                        <GradientStop Color="#1f2f49" Offset="0" />
                        <GradientStop Color="#6285bf" Offset="1" />
                    </LinearGradientBrush.GradientStops>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="MainFrameStyle" TargetType="Frame">
        <Setter Property="Background" Value="#fff" />
        <Setter Property="FontSize" Value="24" />
    </Style>
    <Style x:Key="MainView" TargetType="ScrollViewer">
        <Setter Property="Padding" Value="30" />
        <Setter Property="VerticalScrollBarVisibility" Value="Auto" />
    </Style>
    <Style x:Key="Panel" TargetType="Panel">
        <Setter Property="Background" Value="#fff"/>
    </Style>
    <Style x:Key="Paragraph" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="Margin" Value="0 10" />
        <Setter Property="TextWrapping" Value="Wrap" />
    </Style>
    <Style x:Key="NoData" TargetType="TextBlock" BasedOn="{StaticResource Paragraph}">
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="{StaticResource greyDarkBrush}" />
    </Style>
    <Style TargetType="GridSplitter">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="ResizeBehavior" Value="PreviousAndNext"/>
        <Setter Property="Width" Value="5"/>
        <Style.Triggers>
            <Trigger Property="IsDragging" Value="True">
                <Setter Property="Background" Value="#40000000"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    <Style x:Key="RoundedShadowBorder" TargetType="Border">
        <Setter Property="Background" Value="White"/>
        <Setter Property="CornerRadius" Value="5"/>
        <Setter Property="Padding" Value="30"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="#264d7f7f" Direction="270" ShadowDepth="5" BlurRadius="10" Opacity="0.15"/>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="RoundedBorder" TargetType="Border">
        <Setter Property="Background" Value="White"/>
        <Setter Property="CornerRadius" Value="5"/>
        <Setter Property="Padding" Value="5"/>
    </Style>

    <!-- Apple-style Thumb -->
    <Style x:Key="AppleScrollThumb" TargetType="Thumb">
        <Setter Property="Margin" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Thumb">
                    <Border x:Name="ThumbBorder"
                        CornerRadius="2"
                        Background="#29000000"
                        SnapsToDevicePixels="True"/>
                        <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="ThumbBorder" Property="Background" Value="#59000000"/>
                            </Trigger>
                            <Trigger Property="IsDragging" Value="True">
                            <Setter TargetName="ThumbBorder" Property="Background" Value="#7F000000"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <!-- Apple-style ScrollBar -->
    <Style TargetType="ScrollBar">
        <Setter Property="Width" Value="8"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ScrollBar">
                    <Grid Width="5" Background="Transparent">
                        <!-- Добавляем полосу с прозрачностью 25% -->
                        <Border Background="#10000000" CornerRadius="2" />
                        <Track x:Name="PART_Track" IsDirectionReversed="true" Focusable="false">
                            <Track.Thumb>
                                <Thumb Style="{StaticResource AppleScrollThumb}" />
                            </Track.Thumb>
                            <Track.IncreaseRepeatButton>
                                <RepeatButton Opacity="0" IsTabStop="False"/>
                            </Track.IncreaseRepeatButton>
                            <Track.DecreaseRepeatButton>
                                <RepeatButton Opacity="0" IsTabStop="False"/>
                            </Track.DecreaseRepeatButton>
                        </Track>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="PART_Track" Property="Visibility" Value="Collapsed"/>
                        </Trigger>
                        <Trigger Property="Orientation" Value="Horizontal">
                            <Setter Property="Width" Value="Auto"/>
                            <Setter Property="Height" Value="8"/>
                            <Setter TargetName="PART_Track" Property="LayoutTransform">
                                <Setter.Value>
                                    <RotateTransform Angle="-90"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="MenuItem">
        <Setter Property="Padding" Value="5"/>
    </Style>

    <Style x:Key="TextBlockWithEllipsisStyle" TargetType="TextBlock">
        <Setter Property="TextTrimming" Value="CharacterEllipsis" />
        <Setter Property="TextWrapping" Value="NoWrap" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>
</ResourceDictionary>
