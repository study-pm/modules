<Page x:Class="HR.Pages.WorkersPg"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:HR.Pages"
      xmlns:uc="clr-namespace:HR.Controls"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Workers">
    <ScrollViewer Style="{StaticResource MainView}">
        <StackPanel>
            <uc:Header HeaderText="Сотрудники"></uc:Header>
            <TextBlock Style="{StaticResource Paragraph}">
                Данный раздел содержит информацию о сотрудниках по категориям в соответствии с
                видами профессиональной деятельности и степенью участия в образовательном процессе.
            </TextBlock>
            <Button Style="{StaticResource MenuBtn}">Руководство</Button>
            <Button Style="{StaticResource MenuBtn}">Учителя</Button>
            <Button Style="{StaticResource MenuBtn}">Педагоги</Button>
            <Button Style="{StaticResource MenuBtn}">Вспомогательный персонал</Button>
        </StackPanel>
    </ScrollViewer>
</Page>
