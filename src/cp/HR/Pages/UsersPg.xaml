<Page x:Class="HR.Pages.UsersPg"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:HR.Pages"
      xmlns:uc="clr-namespace:HR.Controls"
      xmlns:utils="clr-namespace:HR.Utilities"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UsersPg" Loaded="Page_Loaded">
    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <utils:InverseBoolToVisibilityConverter x:Key="InvBoolConv"/>
    </Page.Resources>
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <uc:Header HeaderText="Пользователи"></uc:Header>
            <TextBlock Style="{StaticResource Paragraph}">
            Данный раздел содержит список пользователя и дает возможность управления пользовательскими записями:
            смена роли, блокировка, удаление.
            </TextBlock>
        </StackPanel>
        <ItemsControl Grid.Row="1" ItemsSource="{Binding Users}" DisplayMemberPath="Login">
        </ItemsControl>
        <DataGrid Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" ColumnWidth="*"
                  CanUserAddRows="False" CanUserDeleteRows="False"
                  HeadersVisibility="Column" VerticalScrollBarVisibility="Auto"
                  ItemsSource="{Binding Users}"
                  SelectedItem="{Binding SelectedUser, Mode=TwoWay}"
                  LoadingRow="UsersDataGrid_LoadingRow"
                  PreviewKeyDown="UsersDataGrid_PreviewKeyDown"
                  >
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="" Width="40" IsReadOnly="True">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, Path=Header}"
                                       HorizontalAlignment="Center"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Id" Width="40" Binding="{Binding Id}" />
                <DataGridTextColumn Header="Логин" Binding="{Binding Login}" />
                <DataGridTextColumn Header="Сотрудник" Binding="{Binding Employee.FullName}" />
                <DataGridTextColumn Header="Роль" Binding="{Binding Role.Name}" />
                <DataGridTextColumn Binding="{Binding Status}" Width="40" />
            </DataGrid.Columns>
            <DataGrid.ContextMenu>
                <ContextMenu DataContext="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource Self}}">
                    <MenuItem Header="Удалить"
                              Command="{Binding DeleteUserCommand}"
                              CommandParameter="{Binding PlacementTarget.SelectedItem, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                              >
                        <MenuItem.Icon>
                            <Viewbox Height="16" Width="16">
                                <Canvas Height="496" Width="512">
                                    <Path x:Name="IconPath" Fill="{StaticResource BaseDarkBrush}" Data="{StaticResource UserTimesSolidPath}">
                                        <Path.RenderTransform>
                                            <TranslateTransform X="0" Y="0"/>
                                        </Path.RenderTransform>
                                    </Path>
                                </Canvas>
                            </Viewbox>
                        </MenuItem.Icon>
                    </MenuItem>
                </ContextMenu>
            </DataGrid.ContextMenu>
        </DataGrid>
    </Grid>
</Page>
