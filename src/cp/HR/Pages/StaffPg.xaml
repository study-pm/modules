        <DataGrid Grid.Row="1" x:Name="EmployeesDataGrid" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True"
                          AlternationCount="1000" HeadersVisibility="Column" VerticalScrollBarVisibility="Auto"
                          Visibility="{Binding IsGridView, Converter={StaticResource BoolToVis}}"
                          ItemsSource="{Binding Staff}"
                          >
            <DataGrid.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Редактировать"
                                      InputGestureText="Ctrl+E"
                                      IsEnabled="False"
                            >
                                <MenuItem.Icon>
                                    <Viewbox Height="16" Width="16">
                                        <Canvas Height="496" Width="512">
                                            <Path Fill="{StaticResource BaseDarkBrush}" Data="{StaticResource EditSolidPath}">
                                                <Path.RenderTransform>
                                                    <TranslateTransform X="0" Y="0"/>
                                                </Path.RenderTransform>
                                            </Path>
                                        </Canvas>
                                    </Viewbox>
