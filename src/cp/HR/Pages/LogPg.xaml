<Page x:Class="HR.Pages.LogPg"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:HR.Pages"
      xmlns:uc="clr-namespace:HR.Controls"
      xmlns:utils="clr-namespace:HR.Utilities"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LogPg">
    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <utils:CollectionToVisibilityConverter x:Key="ColToVisConv"/>
        <utils:InverseBoolToVisibilityConverter x:Key="InvBoolConv"/>
        <utils:NotNullToBoolConverter  x:Key="NotNullToBoolConverter"/>
    </Page.Resources>
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <uc:Header HeaderText="Журнал событий"></uc:Header>
            <TextBlock Style="{StaticResource Paragraph}">
                Данный раздел содержит информацию о наиболее важных пользовательских событиях.
            </TextBlock>
            <TextBlock Style="{StaticResource NoData}" Visibility="{Binding Log, Converter={StaticResource ColToVisConv}, ConverterParameter=False}">
                Информация отсутствует
            </TextBlock>
            <StackPanel Visibility="{Binding Log, Converter={StaticResource BoolToVis}}">
                <TextBlock>Группировка, поиск, фильтрация, редактирование, добавление, удаление</TextBlock>
            </StackPanel>
            <Button Click="Button_Click">Raise App event</Button>
        </StackPanel>
    </Grid>
</Page>
