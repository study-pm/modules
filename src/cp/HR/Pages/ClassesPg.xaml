<Page x:Class="HR.Pages.ClassesPg"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:HR.Pages"
      xmlns:uc="clr-namespace:HR.Controls"
      xmlns:utils="clr-namespace:HR.Utilities"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ClassesPg" Loaded="Page_Loaded" Unloaded="Page_Unloaded">
    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <utils:InverseBoolToVisibilityConverter x:Key="InvBoolConv"/>
    </Page.Resources>
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <uc:Header HeaderText="Классы"></uc:Header>
            <TextBlock Style="{StaticResource Paragraph}">
                Данный раздел содержит информацию о классном руководстве.
            </TextBlock>
            <TextBlock Style="{StaticResource NoData}" Visibility="{Binding IsListEmpty, Converter={StaticResource BoolToVis}}">
                Информация отсутствует
            </TextBlock>
            <StackPanel Visibility="{Binding IsListNotEmpty, Converter={StaticResource BoolToVis}}">
            </StackPanel>
        </StackPanel>
        <DataGrid   x:Name="dataGrid" Grid.Row="1" IsReadOnly="False"
                    AutoGenerateColumns="False" ColumnWidth="*" AlternationCount="2"
                    CanUserAddRows="False" CanUserDeleteRows="False"
                    HeadersVisibility="Column" VerticalScrollBarVisibility="Auto"
                    ItemsSource="{Binding Classes}"
                    SelectedItem="{Binding Selected, Mode=TwoWay}"
                    Visibility="{Binding IsListNotEmpty, Converter={StaticResource BoolToVis}}"
                    LoadingRow="DataGrid_LoadingRow"
                    PreviewKeyDown="DataGrid_PreviewKeyDown"
                    >
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="" Width="40" IsReadOnly="True">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock HorizontalAlignment="Center"
                                       Text="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, Path=Header}"
                                       />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Класс" Binding="{Binding Title}" Width="50" />
                <DataGridTextColumn Header="Классный руководитель" Binding="{Binding Employee.FullName}" IsReadOnly="True" />
            </DataGrid.Columns>
            <DataGrid.ContextMenu>
                <ContextMenu DataContext="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource Self}}">
                    <MenuItem Header="Удалить класс"
                              InputGestureText="Del"
                              Command="{Binding DeleteItemCommand}"
                              CommandParameter="{Binding PlacementTarget.SelectedItem, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                              >
                        <MenuItem.Icon>
                            <Viewbox Height="16" Width="16">
                                <Canvas Height="496" Width="512">
                                    <Path x:Name="IconPath" Fill="{StaticResource BaseDarkBrush}" Data="{StaticResource UserTimesSolidPath}">
                                        <Path.RenderTransform>
                                            <TranslateTransform X="0" Y="0"/>
                                        </Path.RenderTransform>
                                    </Path>
                                </Canvas>
                            </Viewbox>
                        </MenuItem.Icon>
                    </MenuItem>
                </ContextMenu>
            </DataGrid.ContextMenu>
        </DataGrid>
    </Grid>
</Page>
