<Page x:Class="HR.Pages.ProfilePg"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:HR.Pages"
      xmlns:uc="clr-namespace:HR.Controls"
      xmlns:utils="clr-namespace:HR.Utilities"
      mc:Ignorable="d"
      d:DesignHeight="600" d:DesignWidth="800"
      Title="ProfilePg" Loaded="Page_Loaded">
    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <utils:ImagePathConverter x:Key="ImgPathConv" />
        <utils:InverseBoolToVisibilityConverter x:Key="InvBoolConv"/>
        <utils:NotEmptyValidationRule x:Key="NotEmptyValidationRule"/>
        <utils:StringToBoolConverter x:Key="StrToBoolConv"/>
    </Page.Resources>
    <ScrollViewer Style="{StaticResource MainView}">
        <StackPanel>
            <uc:Header HeaderText="Профиль"></uc:Header>
            <TextBlock Style="{StaticResource Paragraph}">
            Содержит данные, введенные пользователем для регистрации.
            Изменение прикрепленного сотрудника невозможно.
            Регистрационное имя должно быть уникальным.
            Устанавливаемый пароль должен соответствовать требованиям безопасности
            (не менее 8 символов, включая буквы в разных регистрах, цифры и специальные символы).
            Все поля должны быть заполнены.
            </TextBlock>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="200" />
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <StackPanel Style="{StaticResource FormElement}">
                        <Label Style="{StaticResource FormLabel}">Регистрационное имя (Логин)</Label>
                        <TextBox x:Name="LoginTxb" Style="{StaticResource FormTextBox}"
                                 IsEnabled="{Binding IsInProgress, Converter={StaticResource InvBoolConv}}"
                                 utils:ValidationHelper.AutoErrorVisibility="True"
                                 utils:ValidationHelper.EnableTouchedTracking="True"
                                 >
                            <TextBox.Text>
                                <Binding Path="Login" UpdateSourceTrigger="PropertyChanged"
                                         ValidatesOnDataErrors="True" NotifyOnValidationError="True"
                                         ValidatesOnNotifyDataErrors="True"
                                         >
                                    <Binding.ValidationRules>
                                        <utils:MaxLengthValidationRule MaxLength="32" />
                                        <utils:MinLengthValidationRule MinLength="4" />
                                        <utils:NotEmptyValidationRule/>
                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox.Text>
                        </TextBox>
                    </StackPanel>
                    <StackPanel Style="{StaticResource FormElement}">
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <Label>Сотрудник</Label>
                            <uc:Details Type="Question"
                                        ToolTip="Прикрепленный к пользователю сотрудник не может быть изменен"
                                        />
                        </StackPanel>
                        <ComboBox x:Name="EmployeeCmb" Height="25"
                                  Style="{StaticResource FormComboBox}"
                                  IsTextSearchEnabled="True"
                                  TextSearch.TextPath="FullName"
                                  IsEnabled="False" IsReadOnly="True"
                                  ItemsSource="{Binding Employees}"
                                  SelectedItem="{Binding Employee, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                  SelectedValuePath="Id"
                                  >
                            <ComboBox.SelectedValue>
                                <Binding Path="Employee.Id" UpdateSourceTrigger="PropertyChanged">
                                    <Binding.ValidationRules>
                                        <utils:NotEmptyValidationRule/>
                                    </Binding.ValidationRules>
                                </Binding>
                            </ComboBox.SelectedValue>
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding FullName}"
                                               TextTrimming="CharacterEllipsis" TextWrapping="NoWrap"
                                               VerticalAlignment="Center"
                                               />
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>
                    <StackPanel Style="{StaticResource FormElement}">
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <Label>Роль</Label>
                            <uc:Details Type="Question"
                                        ToolTip="Для смены роли обратитесь к администратору"
                                        />
                        </StackPanel>
                        <ComboBox x:Name="RoleCmb" Height="25"
                                  Style="{StaticResource FormComboBox}"
                                  IsTextSearchEnabled="True"
                                  TextSearch.TextPath="DisplayName"
                                  IsEnabled="False"
                                  ItemsSource="{Binding Roles}"
                                  SelectedItem="{Binding Role, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                  SelectedValuePath="Id"
                                  >
                            <ComboBox.SelectedValue>
                                <Binding Path="Role.Id" UpdateSourceTrigger="PropertyChanged">
                                    <Binding.ValidationRules>
                                        <utils:NotEmptyValidationRule/>
                                    </Binding.ValidationRules>
                                </Binding>
                            </ComboBox.SelectedValue>
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Name}"
                                               TextTrimming="CharacterEllipsis" TextWrapping="NoWrap"
                                               VerticalAlignment="Center"
                                               />
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>
                    <StackPanel Style="{StaticResource FormElement}">
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <Label>Пароль</Label>
                            <uc:Details Type="Question"
                                ToolTip="Пароль не может быть показан по соображениям безопасности"
                                />
                        </StackPanel>
                        <PasswordBox x:Name="PasswordPwb" Style="{StaticResource FormPasswordBox}"
                                 IsEnabled="False"
                                 Password="..............."
                                 utils:ValidationHelper.AutoErrorVisibility="True"
                                 utils:ValidationHelper.EnableTouchedTracking="True"
                                 >
                        </PasswordBox>
                    </StackPanel>
                </StackPanel>
                <Grid Grid.Column="1" Margin="5 35 5 0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="225" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <StackPanel>
                        <Viewbox Stretch="Fill" Width="175" Height="175">
                            <Path Fill="{StaticResource cyanDarkBrush}" Data="{StaticResource UserCircleSolidPath}"/>
                        </Viewbox>
                    </StackPanel>
                    <Button ToolTip="Увеличить изображение"
                            Style="{StaticResource ImgButtonStyle}"
                            Click="EnlargeImageButton_Click"
                            IsEnabled="{Binding Image, Converter={StaticResource StrToBoolConv}}"
                            >
                        <Image Source="{Binding Image, Converter={StaticResource ImgPathConv}}"/>
                    </Button>
                    <Popup StaysOpen="False" AllowsTransparency="True" Placement="MousePoint" PopupAnimation="Fade">
                        <Border BorderBrush="LightGray" BorderThickness="1" Background="White"
CornerRadius="5" Padding="10"
>
                            <ScrollViewer MaxWidth="500" VerticalScrollBarVisibility="Hidden">
                                <Image />
                            </ScrollViewer>
                        </Border>
                    </Popup>
                    <StackPanel Grid.Row="1" Margin="5">
                        <TextBlock FontWeight="Bold" FontSize="16" HorizontalAlignment="Center"
                       Style="{StaticResource Paragraph}"
                       Visibility="{Binding HasImage, Converter={StaticResource InvBoolConv}}"
                       >
                <Hyperlink
                    Command="{Binding AddImgCmd, RelativeSource={RelativeSource AncestorType=Page}}"
                    >Добавить фото</Hyperlink>
                        </TextBlock>
                        <TextBlock FontWeight="Bold" FontSize="16" HorizontalAlignment="Center"
                       Style="{StaticResource Paragraph}"
                       Visibility="{Binding HasImage, Converter={StaticResource BoolToVis}}"
                       >
                <Hyperlink
                    Command="{Binding AddImgCmd, RelativeSource={RelativeSource AncestorType=Page}}"
                    >Сменить фото</Hyperlink>
                        </TextBlock>
                    </StackPanel>
                </Grid>
            </Grid>

            <Grid Margin="0 30 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" MaxWidth="300"/>
                    <ColumnDefinition Width="2*" MaxWidth="400" />
                    <ColumnDefinition Width="185"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Label Style="{StaticResource FormLabel}">Сотрудник</Label>
                <TextBlock Grid.Column="1"
                           Style="{StaticResource FormTextBlock}"
                           Text="{Binding EmployeeName}"
                           />
                <StackPanel Grid.Column="3" Grid.RowSpan="5" Margin="0 10">
                        <Button Grid.Column="1" ToolTip="Увеличить изображение"
                                Style="{StaticResource ImgButtonStyle}"
                            Click="EnlargeImageButton_Click"
                            IsEnabled="{Binding Image, Converter={StaticResource StrToBoolConv}}"
                            >
                        <StackPanel>
                            <Image Source="{Binding Image, Converter={StaticResource ImgPathConv}}"/>
                            <Viewbox Stretch="Fill" Width="150" Height="150">
                                <Path Fill="{StaticResource cyanDarkBrush}" Data="{StaticResource UserCircleSolidPath}"/>
                            </Viewbox>
                        </StackPanel>
                    </Button>
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="5" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Button x:Name="AddImageBtn" Grid.Column="0" Grid.ColumnSpan="3" Content="Добавить"
                                Style="{StaticResource ButtonMini}"
                                Background="{StaticResource BlueBrush}"
                                IsEnabled="{Binding IsInProgress, Converter={StaticResource InvBoolConv}}"
                                Visibility="Visible"
                                />
                        <Button Grid.Row="1" x:Name="DeleteImageBtn" Grid.Column="0" Content="Удалить"
                                Style="{StaticResource ButtonMini}"
                                Background="{StaticResource OrangeRegularBrush}"
                                IsEnabled="{Binding IsInProgress, Converter={StaticResource InvBoolConv}}"
                                Visibility="Visible"
                                />
                        <Button Grid.Row="1" x:Name="ChangeImageBtn" Grid.Column="3" Content="Заменить"
                                Style="{StaticResource ButtonMini}"
                                Background="{StaticResource GreenMediumBrush}"
                                IsEnabled="{Binding IsInProgress, Converter={StaticResource InvBoolConv}}"
                                Visibility="Visible"
                                />
                    </Grid>

                    <Popup StaysOpen="False" AllowsTransparency="True" Placement="MousePoint" PopupAnimation="Fade">
                        <Border BorderBrush="LightGray" BorderThickness="1" Background="White"
                                CornerRadius="5" Padding="10"
                            >
                            <ScrollViewer MaxWidth="500" VerticalScrollBarVisibility="Hidden">
                                <Image />
                            </ScrollViewer>
                        </Border>
                    </Popup>
                </StackPanel>
                <Label Grid.Row="1" Style="{StaticResource FormLabel}">Роль</Label>
                <DockPanel Grid.Column="1" Grid.Row="1" Visibility="{Binding IsRoleChange, Converter={StaticResource InvBoolConv}}">
                    <uc:IconHighlightButton x:Name="RoleChangeBtn" Width="20" Height="20" Margin="10 5 30 5" ToolTip="Редактировать" DockPanel.Dock="Right"
                                            Click="RoleChangeBtn_Click"
                                            >
                        <StackPanel>
                            <Viewbox Stretch="Fill" Width="16" Height="16">
                                <Path Fill="{StaticResource magentaDarkBrush}" Data="{StaticResource EditSolidPath}"/>
                            </Viewbox>
                        </StackPanel>
                    </uc:IconHighlightButton>
                    <TextBlock Style="{StaticResource FormTextBlock}"
                               Text="{Binding Role.Name}"
                               />
                </DockPanel>
                <DockPanel Grid.Column="1" Grid.Row="1" Visibility="{Binding IsRoleChange, Converter={StaticResource BoolToVis}}">
                    <uc:IconHighlightButton x:Name="RoleSubmitIconBtn" Width="20" Height="20" Margin="5" ToolTip="Сохранить" DockPanel.Dock="Right"
                                            Click="RoleSubmitIconBtn_Click"
                                            >
                        <StackPanel>
                            <Viewbox Stretch="Fill" Width="16" Height="16">
                                <Path Fill="Green" Data="{StaticResource CheckSolidPath}"/>
                            </Viewbox>
                        </StackPanel>
                    </uc:IconHighlightButton>
                    <uc:IconHighlightButton x:Name="RoleCancelIconBtn" Width="20" Height="20" Margin="5" ToolTip="Отменить" DockPanel.Dock="Right"
                                            Click="RoleCancelIconBtn_Click"
                                            >
                        <StackPanel>
                            <Viewbox Stretch="Fill" Width="14" Height="16">
                                <Path Fill="Red" Data="{StaticResource XmarkSolidPath}"/>
                            </Viewbox>
                        </StackPanel>
                    </uc:IconHighlightButton>
                    <ComboBox x:Name="RoleCmbbx" Height="25"
                              Style="{StaticResource FormComboBox}"
                              IsTextSearchEnabled="True"
                              TextSearch.TextPath="DisplayName"
                              IsEnabled="{Binding IsInProgress, Converter={StaticResource InvBoolConv}}"
                              ItemsSource="{Binding Roles}"
                              SelectedItem="{Binding Role, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                              SelectedValuePath="Id"
                              >
                        <ComboBox.SelectedValue>
                            <Binding Path="Role.Id" UpdateSourceTrigger="PropertyChanged">
                                <Binding.ValidationRules>
                                    <utils:NotEmptyValidationRule/>
                                </Binding.ValidationRules>
                            </Binding>
                        </ComboBox.SelectedValue>
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}"
                                           TextTrimming="CharacterEllipsis" TextWrapping="NoWrap"
                                           VerticalAlignment="Center"
                                           />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </DockPanel>
                <TextBlock Grid.Row="2" Grid.ColumnSpan="2" Style="{StaticResource FormTextBlock}">
                    <Hyperlink x:Name="SettingsLink" FontWeight="Bold">Настроить вход</Hyperlink>
                </TextBlock>
                <Expander Grid.Row="3" Grid.ColumnSpan="2" Style="{StaticResource FormExpander}">
                    <Expander.Header>
                        <TextBlock Style="{StaticResource HyperlinkLikeTextBlock}">
                            Сменить пароль
                        </TextBlock>
                    </Expander.Header>
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" MaxWidth="300"/>
                                <ColumnDefinition Width="2*" MaxWidth="400" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Label Style="{StaticResource FormLabel}" ToolTip="Текущий пароль">Текущий пароль</Label>
                            <DockPanel Grid.Column="1" Margin="0 10">
                                <uc:IconHighlightButton Width="20" Height="20" Margin="10 5 30 5" ToolTip="Показать пароль" DockPanel.Dock="Right"
                                                        >
                                    <StackPanel>
                                        <Viewbox Stretch="Fill" Width="20" Height="16">
                                            <Path Fill="{StaticResource BlueBrush}" Data="{StaticResource EyeSolidPath}"/>
                                        </Viewbox>
                                    </StackPanel>
                                </uc:IconHighlightButton>
                                <PasswordBox x:Name="CurPwdPwb" />
                            </DockPanel>
                            <Label Grid.Row="1" Style="{StaticResource FormLabel}" ToolTip="Новый пароль">Новый пароль</Label>
                            <DockPanel Grid.Column="1" Grid.Row="1" Margin="0 10">
                                <uc:IconHighlightButton Width="20" Height="20" Margin="10 5 30 5" ToolTip="Показать пароль" DockPanel.Dock="Right"
                            >
                                    <StackPanel>
                                        <Viewbox Stretch="Fill" Width="20" Height="16">
                                            <Path Fill="{StaticResource BlueBrush}" Data="{StaticResource EyeSolidPath}"/>
                                        </Viewbox>
                                    </StackPanel>
                                </uc:IconHighlightButton>
                                <PasswordBox x:Name="NewPwdPwb" />
                            </DockPanel>
                            <Label Grid.Row="2" Style="{StaticResource FormLabel}" ToolTip="Повтор пароля">Повтор пароля</Label>
                            <DockPanel Grid.Column="1" Grid.Row="2" Margin="0 10">
                                <uc:IconHighlightButton Width="20" Height="20" Margin="10 5 30 5" ToolTip="Показать пароль" DockPanel.Dock="Right"
                            >
                                    <StackPanel>
                                        <Viewbox Stretch="Fill" Width="20" Height="16">
                                            <Path Fill="{StaticResource BlueBrush}" Data="{StaticResource EyeSolidPath}"/>
                                        </Viewbox>
                                    </StackPanel>
                                </uc:IconHighlightButton>
                                <PasswordBox x:Name="RepeatPwdPwb" />
                            </DockPanel>
                        </Grid>
                    </StackPanel>
                </Expander>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</Page>
