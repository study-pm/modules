<Page x:Class="CookingBook.Pages.Registration"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CookingBook.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Registration">

    <Grid>
        <StackPanel>
            <Label Content="Введите имя автора" HorizontalAlignment="Left" />
            <TextBox Name="nameInput" HorizontalAlignment="Left" TextWrapping="Wrap" Width="200"/>
            <Label Content="Введите логин" HorizontalAlignment="Left" />
            <TextBox Name="loginInput" HorizontalAlignment="Left" TextWrapping="Wrap" Width="200" />
            <Label Content="Введите пароль" HorizontalAlignment="Left" />
            <PasswordBox Name="pass1Box" HorizontalAlignment="Left" Width="200" />
            <Label Content="Введите пароль повторно" HorizontalAlignment="Left" />            
            <PasswordBox Name="pass2Box" HorizontalAlignment="Left" Width="200" PasswordChanged="pass2_PasswordChanged"  />
            <Label Content="Дата рождения" HorizontalAlignment="Left" />
            <DatePicker Name="birthdatePick" Width="200" HorizontalAlignment="Left"></DatePicker>
            <Label Content="Стаж" HorizontalAlignment="Left" />
            <TextBox Name="experienceInput" HorizontalAlignment="Left" Width="200" />
            <Label Content="Введите почту" HorizontalAlignment="Left" />
            <TextBox Name="emailInput" HorizontalAlignment="Left" Width="200" />
            <Label Content="Введите телефон" HorizontalAlignment="Left" />
            <TextBox Name="phoneInput" HorizontalAlignment="Left" Width="200" />
            <Button Name="submitBtn" Content="Зарегистрироваться" Background="Green" Foreground="White" HorizontalAlignment="Left" Width="200" Margin="0 40 0 5" Click="submitBtn_Click" />
            <Button Name="backBtn" Content="Назад" Background="Green" Foreground="White" HorizontalAlignment="Left" Width="200" Click="backBtn_Click"/>
        </StackPanel>
    </Grid>
</Page>
