<Page x:Class="RecipeBook.Pages.AughPg"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:RecipeBook.Pages"
      mc:Ignorable="d"
      d:DesignHeight="200" d:DesignWidth="300"
      Title="Аутентификация">
    <Page.Resources>
        <Style TargetType="Label" x:Key="Label">
            <Setter Property="Foreground" Value="#FF0067CC"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0 5"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
        <Style TargetType="Button" x:Key="Button">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="MinHeight" Value="40"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>
    </Page.Resources>
    <Grid>
        <StackPanel Width="250">
            <StackPanel>
                <Label Style="{StaticResource Label}">Введите логин</Label>
                <TextBox x:Name="txbLogin" Padding="5" Margin="0 0 0 5" FontSize="14"></TextBox>
            </StackPanel>
            <StackPanel>
                <Label Style="{StaticResource Label}">Введите пароль</Label>
                <PasswordBox x:Name="psbPass" Padding="5" Margin="0 0 0 5" FontSize="14"></PasswordBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 5">
                <Button x:Name="loginBtn" Style="{StaticResource Button}" BorderBrush="#549d5e" Background="#87e08e" Content="Войти"
                        Click="loginBtn_Click" IsDefault="True" />
                <Button x:Name="registerBtn" Style="{StaticResource Button}" BorderBrush="#cfa95b" Background="#ffd000" Click="registerBtn_Click"
                        >Регистрация</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
