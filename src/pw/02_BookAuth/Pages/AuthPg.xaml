<Page x:Class="AuthBD.Pages.AuthPg"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AuthBD.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPg">
    <Page.Resources>
        <Style TargetType="TextBlock" x:Key="Header">
            <Setter Property="Foreground" Value="#FF3D9898"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0 10"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
        <Style TargetType="Label" x:Key="Label">
            <Setter Property="Foreground" Value="#FF0067CC"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0 5"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
        <Style TargetType="Button" x:Key="Button">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="MinHeight" Value="40"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>
    </Page.Resources>
    <Grid>
        <StackPanel Width="250">
            <TextBlock Style="{StaticResource Header}">Авторизация</TextBlock>
            <Label Style="{StaticResource Label}">Введите логин</Label>
            <TextBox Padding="5" Margin="0 0 0 5" FontSize="14" x:Name="txbLogin"></TextBox>
            <Label Style="{StaticResource Label}">Введите пароль</Label>
            <PasswordBox Padding="5" Margin="0 0 0 5" FontSize="14" x:Name="psbPass"></PasswordBox>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Style="{StaticResource Button}" BorderBrush="#549d5e" Background="#87e08e" Content="Войти" Click="Button_Click" />
                <Button Style="{StaticResource Button}" BorderBrush="#cfa95b" Background="#ffd000">Регистрация</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
