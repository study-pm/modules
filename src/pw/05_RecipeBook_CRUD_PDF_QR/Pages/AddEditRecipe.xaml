<Page x:Class="RecipeBook.Pages.AddEditRecipe"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:RecipeBook.Pages"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      x:Name="this"
      Title="AddEditRecipe">

    <Page.Resources>
        <SolidColorBrush x:Key="HeaderColor" Color="#FF0067CC"/>
        <SolidColorBrush x:Key="HeaderHighlightColor" Color="#0091e1"/>
        <SolidColorBrush x:Key="HeaderActiveColor" Color="#5fbcfa"/>
        <ControlTemplate x:Key="SortableHeaderTemplate" TargetType="Button">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="{TemplateBinding Content}" VerticalAlignment="Center" Margin="0 5"
                   TextDecorations="Underline" FontWeight="Bold" />
                <TextBlock Grid.Column="1" Text="{TemplateBinding Tag}" VerticalAlignment="Center" Padding="5" />
            </Grid>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="{StaticResource HeaderHighlightColor}" />
                    <Setter Property="Cursor" Value="Hand" />
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
        <Style x:Key="SortableHeaderStyle" TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource HeaderColor}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="{StaticResource HeaderHighlightColor}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="Button" x:Key="Button">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0 5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="MinHeight" Value="40"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>
        <Style TargetType="DatePicker" x:Key="InputDate">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0 0 0 5"/>
            <Setter Property="Padding" Value="4"/>
        </Style>
        <Style TargetType="Label" x:Key="Label">
            <Setter Property="Foreground" Value="#FF0067CC"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0 5"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
        <Style TargetType="PasswordBox" x:Key="InputPassword">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0 0 0 5"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="Placeholder">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontStyle" Value="Italic"/>
            <Setter Property="Foreground" Value="DarkGray"/>
            <Setter Property="Padding" Value="10 5"/>
            <Setter Property="Visibility" Value="Collapsed"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="Asterisk">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="Red"/>
            <Setter Property="Text" Value="*"/>
            <Setter Property="ToolTip" Value="Обязательно для заполнения"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="Question">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#FFCCA900"/>
            <Setter Property="Text" Value=" ?"/>
        </Style>
        <Style TargetType="TextBox" x:Key="InputText">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0 0 0 5"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
    </Page.Resources>
    <Grid Margin="20">
        <StackPanel MaxWidth="780">

            <WrapPanel VerticalAlignment="Top" Margin="0 10">
                <StackPanel Margin="0 0 10 0">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="0 5">
                        <Label Style="{StaticResource Label}" Width="200">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock>Название</TextBlock>
                                <TextBlock Style="{StaticResource Asterisk}" />
                            </StackPanel>
                        </Label>
                            <TextBox x:Name="nameTxb" Style="{StaticResource InputText}" Width="200"
                                    Text="{Binding RecipeName}" SpellCheck.IsEnabled="True"
                                    TextChanged="txbName_TextChanged" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="0 5">
                        <Label Style="{StaticResource Label}" Width="200">
                            <TextBlock Padding="0 5">Категория</TextBlock>
                        </Label>
                        <ComboBox x:Name="cmbCat" ItemsSource="{Binding}" Width="200" FontSize="14"
                            DockPanel.Dock="Right"
                            Margin="0 5" Padding="5" Height="31"
                            SelectionChanged="cmbCat_SelectionChanged">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock x:Name="txblCatSelection" Text="{Binding}" TextTrimming="CharacterEllipsis"
    ToolTip="{Binding}" />
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="0 5">
                        <Label Style="{StaticResource Label}" Width="200">
                            <TextBlock Padding="0 5" Margin="0 0 0 5">Время приготовления</TextBlock>
                        </Label>
                        <Grid>
                            <TextBox x:Name="timeTbx" Style="{StaticResource InputText}" Width="200"
                                DockPanel.Dock="Right"
                                Text="{Binding CookingTime}" Padding="5" Height="31"
                                LostFocus="timeTbx_LostFocus" TextChanged="timeTbx_TextChanged" />
                            <TextBlock IsHitTestVisible="False" Text="полных минут" Padding="10 7" >
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource Placeholder}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Text, ElementName=timeTbx}" Value="">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="0 5">
                        <Label Style="{StaticResource Label}" Width="200">
                            <TextBlock>Адрес ресурса</TextBlock>
                        </Label>
                        <Grid>
                            <TextBox x:Name="urlTbx" Style="{StaticResource InputText}" Text="{Binding URL}"
                                     Height="31" Padding="5" Width="200"
                                    LostFocus="urlTbx_LostFocus" TextChanged="urlTbx_TextChanged"
                                     />
                            <TextBlock IsHitTestVisible="False" Text="https://host.domain" >
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource Placeholder}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Text, ElementName=urlTbx}" Value="">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </StackPanel>

                </StackPanel>
                <StackPanel Margin="10 5 0 0" Width="305" HorizontalAlignment="Center">
                    <Image x:Name="recipeImg" Source="{Binding CurrentPhoto}" Width="305" />
                    <Button x:Name="imgBtn" Content="Добавить изображение" HorizontalAlignment="Center"
                            Style="{StaticResource SortableHeaderStyle}" Click="imgBtn_Click"
                            >
                        <Button.Template>
                            <StaticResource ResourceKey="SortableHeaderTemplate"/>
                        </Button.Template>
                    </Button>
                </StackPanel>

            </WrapPanel>

            <StackPanel>
                <StackPanel>
                    <Label Style="{StaticResource Label}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock>Описание</TextBlock>
                        </StackPanel>
                    </Label>
                    <TextBox x:Name="descriptionTbx" Style="{StaticResource InputText}"
                        Text="{Binding Description}" SpellCheck.IsEnabled="True" TextWrapping="Wrap" Height="100"
                        AcceptsReturn="True" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto"
                        TextChanged="descriptionTbx_TextChanged" />
                </StackPanel>
            </StackPanel>

            <DockPanel Margin="0 10">
                <Button x:Name="btnSave" IsDefault="True" DockPanel.Dock="Right"
                        BorderBrush="LightCoral" Background="Coral" IsEnabled="{Binding ElementName=this, Path=isChanged}"
                        Style="{StaticResource Button}" Margin="0 5" Click="btnSave_Click"
                    >
                    Сохранить</Button>
                <Button x:Name="btnReset" DockPanel.Dock="Right"
                        BorderBrush="#549d5e" Background="#87e08e"
                        IsEnabled="{Binding ElementName=this, Path=isChanged}"
                        Style="{StaticResource Button}" Margin="5 5"
                        Click="btnReset_Click"
                        >
                    Восстановить</Button>
                <Button x:Name="backBtn" Style="{StaticResource Button}" HorizontalAlignment="Left"
                        BorderBrush="#cfa95b" Background="#ffd000" Content="Назад"
                        Click="backBtn_Click"
                        />

            </DockPanel>

        </StackPanel>
    </Grid>
</Page>
