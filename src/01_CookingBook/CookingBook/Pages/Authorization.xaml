<Page x:Class="CookingBook.Pages.Authorization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CookingBook.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Authorization">

    <Grid>
        <StackPanel>
            <Label Content="Введите логин" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <TextBox Name="InputLogin" HorizontalAlignment="Left" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="200"/>
            <Label Content="Введите пароль" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <PasswordBox Name="InputPass" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200"/>
            <Button Name="BtnSubmit" Content="Войти" Background="Green" Foreground="White" HorizontalAlignment="Left" Margin="0,20,0,0" VerticalAlignment="Top" Click="Button_Click" Width="200"/>
            <Button Name="BtnRegister" Content="Зарегистрироваться" Background="Green" Foreground="White" HorizontalAlignment="Left" Margin="0,10,0,0" Width="200" Click="BtnRegister_Click"/>
            
            
        </StackPanel>
    </Grid>
</Page>
